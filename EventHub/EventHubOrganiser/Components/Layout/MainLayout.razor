@inherits LayoutComponentBase
<style>
    .background-image {
        background-image: url('/images/event_wallpaper4.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
    }
</style>
<div class="page background-image">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

